{
  "description": "Pocket Node Testnet installation",
  "type": "object",
  "properties": {
    "seeds": {
      "type": "string",
      "title": "Seeds",
      "description": "Choose to enter seeds or use default seeds",
      "default": "Default",
      "enum": [
        "Select one",
        "Default",
        "Enter seeds",
        "Seed in config.json"
      ]
    },
    "config": {
      "type": "string",
      "title": "Config",
      "description": "Choose to upload config.json or use default config file",
      "default": "Select one",
      "enum": [
        "Select one",
        "Default",
        "Upload config.json"
      ]
    },
    "chains": {
      "type": "string",
      "title": "Chains",
      "description": "Select which blockchains do you want to serve.",
      "default": "Pocket Testnet",
      "enum": [
        "Select one",
        "Pocket Testnet",
        "Rinkeby",
        "Ethereum Mainnet",
        "Rinkeby and Pocket Testnet",
        "Ethereum Mainnet and Pocket Testnet",
        "Upload chains.json"
      ]
    },
    "account": {
      "type": "string",
      "title": "Node Private Key",
      "description": "The private key of the account that will be used to identify the node. (Learn more here:  https://docs.pokt.network/docs/dappnode-setup#node-private-key)",
      "default": "Shielded Key",
      "enum": [
        "Select one",
        "Shielded Key",
        "Raw Private Key"
      ]
    },
    "tls": {
      "type": "string",
      "title": "Certificate",
      "description": "You must provide a valid certificate for your node. (Learn more here: https://docs.pokt.network/docs/setup-your-env#ssl-certificate)",
      "default": "Do not use a certificate",
      "enum": [
        "Select one",
        "Already uploaded certificate",
        "Do not use a certificate",
        "I have a certificate"
      ]
    }
  },
  "required": [
    "config",
    "seeds",
    "tls",
    "chains",
    "account"
  ],
  "dependencies": {
    "seeds": {
      "oneOf": [
        {
          "properties": {
            "seeds": {
              "enum": [
                "Enter seeds"
              ]
            },
            "seeds_custom": {
              "type": "string",
              "title": "Seeds",
              "description": "Enter seeds"
            }
          },
          "required": [
            "seeds_custom"
          ]
        },
        {
          "properties": {
            "seeds": {
              "enum": [
                "Default"
              ]
            }
          },
          "required": []
        },
        {
          "properties": {
            "seeds": {
              "enum": [
                "Seed in config.json"
              ]
            }
          },
          "required": []
        }
      ]
    },
    "chains": {
      "oneOf": [
        {
          "properties": {
            "chains": {
              "enum": [
                "Rinkeby and Pocket Testnet"
              ]
            }
          },
          "required": []
        },
        {
          "properties": {
            "chains": {
              "enum": [
                "Rinkeby"
              ]
            }
          },
          "required": []
        },
        {
          "properties": {
            "chains": {
              "enum": [
                "Pocket Testnet"
              ]
            }
          },
          "required": []
        },
        {
          "properties": {
            "chains": {
              "enum": [
                "Ethereum Mainnet"
              ]
            }
          },
          "required": []
        },
        {
          "properties": {
            "chains": {
              "enum": [
                "Ethereum Mainnet and Pocket Testnet"
              ]
            }
          },
          "required": []
        },
        {
          "properties": {
            "chains": {
              "enum": [
                "Upload chains.json"
              ]
            },
            "chains_file": {
              "type": "string",
              "format": "data-url",
              "title": "Chains",
              "description": "The chains.json file. (Learn more here: https://docs.pokt.network/docs/create-validator-node#generate-chainsjson)"
            }
          },
          "required": []
        }
      ]
    },
    "config": {
      "oneOf": [
        {
          "properties": {
            "config": {
              "enum": [
                "Upload config.json"
              ]
            },
            "config_file": {
              "type": "string",
              "format": "data-url",
              "title": "Config",
              "description": "The config.json file. (Learn more here: https://docs.pokt.network/docs/configuration-reference)"
            }
          },
          "required": [
            "config_file"
          ]
        },
        {
          "properties": {
            "config": {
              "enum": [
                "Default"
              ]
            }
          },
          "required": []
        }
      ]
    },
    "account": {
      "oneOf": [
        {
          "properties": {
            "account": {
              "enum": [
                "Shielded Key"
              ]
            },
            "shielded_key": {
              "type": "string",
              "format": "data-url",
              "title": "Shielded Key",
              "description": "Your shielded key file (.json)"
            },
            "shielded_pass": {
              "type": "string",
              "title": "Password",
              "description": "This will be use to encrypt your private key on your dappnode"
            }
          },
          "required": [
            "shielded_key",
            "shielded_pass"
          ]
        },
        {
          "properties": {
            "account": {
              "enum": [
                "Raw Private Key"
              ]
            },
            "password": {
              "type": "string",
              "title": "Password",
              "description": "This will be use to encrypt your private key on your dappnode"
            },
            "key": {
              "type": "string",
              "title": "Node Private Key",
              "description": "The private key of the account that will be used to identify the node. (Learn more here:  https://docs.pokt.network/docs/dappnode-setup#node-private-key)"
            }
          },
          "required": [
            "key",
            "password"
          ]
        }
      ]
    },
    "tls": {
      "oneOf": [
        {
          "properties": {
            "tls": {
              "enum": [
                "I have a certificate"
              ]
            },
            "cert": {
              "type": "string",
              "format": "data-url",
              "title": "Certificate",
              "description": "Your certificate file (.crt, .pem)"
            },
            "cert_key": {
              "type": "string",
              "format": "data-url",
              "title": "Key",
              "description": "Your certificate key (.key, .pem)"
            }
          },
          "required": [
            "cert_key",
            "cert"
          ]
        },
        {
          "properties": {
            "tls": {
              "enum": [
                "Do not use a certificate"
              ]
            }
          },
          "required": []
        },
        {
          "properties": {
            "tls": {
              "enum": [
                "Already uploaded certificate"
              ]
            }
          },
          "required": []
        }
      ]
    }
  }
}